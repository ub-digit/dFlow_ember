{{#if breadcrumb}}
<ul class="breadcrumb">
  <li>{{#link-to 'node.show' 'root'}}{{t 'nodes.root'}}{{/link-to}}</li>
  {{#each parent in breadcrumb}}
  {{#if parent.id}}
  <li>{{link-to parent.name 'node.show' parent.id}}</li>
  {{else}}
  <li>{{parent.name}}</li>
  {{/if}}
  {{/each}}
</ul>
{{/if}}

<div class="navbar navbar-default sub-navbar">
  <div class="navbar-header">
    <a href="javascript:void(0)" class="navbar-brand">{{id}}</a>
  </div>
  <ul class="navbar-nav nav navbar-right">
    {{#if session.can_manage_jobs}}
      <button class="btn btn-danger navbar-btn" {{action 'deleteJob' id}}>{{t 'jobs.delete'}}</button>
      {{print-link id=model.id type="button"}}
      {{#if startable}}
      <button class="btn btn-primary navbar-btn" {{action 'startJob' id}}>{{t 'jobs.start'}}</button>
      {{/if}}
      {{#if quarantined}}
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#unQuarantineModal">
        {{t 'jobs.unQuarantine'}}
      </button>
      {{else}}
      <!-- Button trigger modal -->
      <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#quarantineModal">
        {{t 'jobs.quarantine'}}
      </button>
      {{/if}}
    {{/if}}
  </ul>
</div>

{{#if error}}
<div class="alert alert-danger">
  {{error.msg}}
</div>
{{/if}}

<div class="panel panel-default">
  <div class="panel-heading">
    <div class="panel-title"><strong>{{id}}</strong> {{display}}</div>
  </div>
  <div class="panel-body">
    <div class="col-xs-12">
      <div class="alert alert-success">
        <strong>Status:</strong> {{status_string}}
      </div>
    </div>
    <div class="col-xs-6">
      <div class="row">
        <div class="col-xs-3">
          <strong>{{t 'jobs.source'}}</strong> 
        </div>
        <div class="col-xs-9">
          {{source_label}} ( 
          {{#if source_link}}
            <a {{bind-attr href=source_link}} target="_blank">{{catalog_id}}</a>
          {{else}}
            {{catalog_id}}
          {{/if}}
          )
        </div>
      </div>
      
      {{#if title}}
      <div class="row">
        <div class="col-xs-3">
          <strong>{{t 'jobs.title'}}</strong>
        </div>
        <div class="col-xs-9">
          {{title}}
        </div>
      </div>
      {{/if}}
      
      {{#if author}}
      <div class="row">
        <div class="col-xs-3">
          <strong>{{t 'jobs.author'}}</strong>
        </div>
        <div class="col-xs-9">
          {{author}}
        </div>
      </div>
      {{/if}}
      
      {{#if type_of_record_string}}
      <div class="row">
        <div class="col-xs-3">
          <strong>{{t 'jobs.type_of_record.label'}}</strong>
        </div>
        <div class="col-xs-9">
          {{type_of_record_string}}
        </div>
      </div>
      {{/if}}

      {{#if chronology_string}}
      <div class="row">
        <div class="col-xs-3">
         {{t 'jobs.chronology'}}
       </div>
       <div class="col-xs-9">
        {{chronology_string}}
      </div>
    </div>
    {{/if}}

    {{#if ordinality_string}}
    <div class="row">
      <div class="col-xs-3">
       {{t 'jobs.ordinality'}}
     </div>
     <div class="col-xs-9">
      {{ordinality_string}}
    </div>
  </div>
  {{/if}}

  <div class="row">
    <div class="col-xs-3">
      <strong>{{t 'jobs.copyright'}}</strong>
    </div>
    <div class="col-xs-9">
      {{#if copyright}}
      <button class="btn btn-danger active btn-xs">{{copyright_string}}</button>
      {{else}}
      <button class="btn btn-success active btn-xs">{{copyright_string}}</button>
      {{/if}}
    </div>
  </div>
</div>
<div class="col-xs-6">
  {{#if object_info}}
  <div class="clearfix"></div>
  <strong>{{t 'jobs.object_info'}}</strong> <pre>{{object_info}}</pre>
  {{/if}}
  {{#if comment}}
  <div class="clearfix"></div>
  <strong>{{t 'jobs.comment'}}</strong> <pre>{{comment}}</pre>
  {{/if}}

</div>

<div class="col-xs-12" style="margin-top:20px">
  <div class="panel-group" id="accordion" role="tablist" aria-multiselectable="true">
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="headingOne">
        <h4 class="panel-title">
          <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne" aria-expanded="true" aria-controls="collapseOne">
            {{t jobs.history}}
          </a>
        </h4>
      </div>
      <div id="collapseOne" class="panel-collapse collapse in" role="tabpanel" aria-labelledby="headingOne">
        <div class="panel-body">
          <table class="table">
            <tr></tr>
            {{#each activity in activities}}
            {{job-activity activity=activity}}
            {{/each}}
          </table>
        </div>
      </div>
    </div>
    <div class="panel panel-default">
      <div class="panel-heading" role="tab" id="headingTwo">
        <h4 class="panel-title">
          <a class="collapsed" data-toggle="collapse" data-parent="#accordion" href="#collapseTwo" aria-expanded="false" aria-controls="collapseTwo">
            {{t jobs.xml}}
          </a>
        </h4>
      </div>
      <div id="collapseTwo" class="panel-collapse collapse" role="tabpanel" aria-labelledby="headingTwo">
        <div class="panel-body">
          <pre>{{xml}}</pre>
        </div>
      </div>
    </div>
  </div>
</div>

</div>
</div>



<!-- UnQuarantine Modal -->
<div class="modal fade" id="unQuarantineModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{{t 'jobs.unQuarantine'}}</h4>
      </div>
      <div class="modal-body">
        ...
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary navbar-btn" data-dismiss="modal" {{action 'unQuarantineJob' model}}>{{t 'jobs.unQuarantine'}}</button>
      </div>
    </div>
  </div>
</div>

<!-- Quarantine Modal -->
<div class="modal fade" id="quarantineModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabel">{{t 'jobs.quarantine'}}</h4>
      </div>
      <div class="modal-body">
        Meddelande:
        {{input value=model.message}}
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary navbar-btn" data-dismiss="modal" {{action 'quarantineJob' model}}>{{t 'jobs.quarantine'}}</button>
      </div>
    </div>
  </div>
</div>
