<!-- Flow Step Modal -->
<div class="modal fade" id="flowStepModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <h4 class="modal-title" id="myModalLabelFlowStep">{{t 'flowStep.set_new_flow_step'}}</h4>
      </div>
      <div class="modal-body">
        <div class="input-group">
        <span class="input-group-addon" id="status-text">{{t 'jobs.status'}}
          </span>
          {{#x-select value=model.current_flow_step class="form-control"}}
            {{#each flowStepItems as |option|}}
              {{#x-option value=option.value}}{{option.label}}{{/x-option}}
              {{/each}}
            {{/x-select}}
        </div>
          <div class="checkbox">
            <label>
              {{input type="checkbox" name="recreateFlow" checked=recreateFlow}}
              Återskapa flöde från konfiguration
            </label>
          </div>
      </div>
      <div class="modal-footer">
        <button class="btn btn-primary navbar-btn" data-dismiss="modal" {{action 'setFlowStep' model recreateFlow}}>{{t 'flowStep.set_new_flow_step'}}</button>
      </div>
    </div>
  </div>
</div>

