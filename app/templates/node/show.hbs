{{#if breadcrumb}}
<ul class="breadcrumb">
  {{#each parent in breadcrumb}}
    {{#if parent.id}}
      <li>{{link-to parent.name 'node.show' parent.id}}</li>
    {{else}}
      <li>{{parent.name}}</li>
    {{/if}}
  {{/each}}
</ul>
{{#link-to 'node.show.new' class="btn btn-primary pull-right"}}{{t 'nodes.new'}}{{/link-to}}
{{#link-to 'node.show.jobs.source' class="btn btn-primary pull-right"}}{{t 'jobs.new'}}{{/link-to}}
{{else}}
{{#if session.can_manage_tree_root}}
{{#link-to 'node.show.new' class="btn btn-primary pull-right"}}{{t 'nodes.new'}}{{/link-to}}
{{/if}}
{{/if}}
{{#if children}}
<table class="table">
  <tr>
    <th>{{t 'nodes.id'}}</th>
    <th>{{t 'nodes.name'}}</th>
    <th></th>
  </tr>
  {{#each child in children}}
    <tr>
      <td>{{child.id}}</td>
      <td>{{link-to child.name 'node.show' child.id}}</td>
      <td>{{#link-to 'node.show.edit' child.id}}{{t 'nodes.edit'}}{{/link-to}}</td>
    </tr>
  {{/each}}
</table>
{{/if}}

{{outlet}}
